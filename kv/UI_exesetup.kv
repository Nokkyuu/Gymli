#:import SlideTransition kivy.uix.screenmanager.SlideTransition

<AppScreenManager>
    UI_exesetup:

<UI_exesetup>:
    name: "UI_exesetup"
    #view: view
    on_enter:
        app.root.transition = SlideTransition(direction="left")  
    PageLayout:
        id: Page
        border: "0dp"
        MDRelativeLayout:
            id: Page1
            md_bg_color: 1,1,1,1
            MDIconButton:
                id: MusclePageButton
                pos_hint: {"x" : 0.8, "y" : 0.05}
                icon: "arm-flex"
                on_release: root.PageSwitch()
                md_bg_color: 0,0,0,0
            MDRelativeLayout:
                size_hint: 1, 1
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint: 1, 1
                    MDLabel:
                        text:""
                        size_hint_y: 0.33
                        size_hint_x: 2
                        pos_hint: { "x" : -0.3, "y" : 0}
                        md_bg_color: 0.01,0.5,0.99,1
                    MDBoxLayout:
                        orientation: "vertical"
                        size_hint: 1, 1
                        MDLabel:
                            size_hint_y: 0.5
                            text:""
                            
                        MDSegmentedButton:
                            size_hint: 1, None
                            id: ExerciseType
                            selected_color: 0.01,0.5,0.99,1
                            MDSegmentedButtonItem:
                                on_active: 
                                    root.ExerciseTypeChoice(1)
                                text: "Free"
                                id: Free
                                icon: "dumbbell"
                            MDSegmentedButtonItem:
                                on_active: 
                                    root.ExerciseTypeChoice(2)
                                text: "M/C"
                                id: Machine
                                icon: "forklift"
                            MDSegmentedButtonItem:
                                on_active: 
                                    root.ExerciseTypeChoice(3)
                                text: "Cable"
                                id: Cable
                                icon: "source-fork"
                            MDSegmentedButtonItem:
                                on_active: 
                                    root.ExerciseTypeChoice(4)
                                text: "Body"
                                id: Body
                                icon: "human"
                        MDLabel:
                            id: RepMinLabel
                            text: "Repetition Minimum"
                            halign: "center"
                        MDSlider: #minimum
                            id: RepMin
                            color: 1, 0.6, 0.05, 1
                            hint: False
                            min: 1
                            max: 15
                            value: 10
                            on_touch_move:
                                root.SetRepMin()
                            on_touch_up:
                                root.SetRepMin()
                        MDLabel:
                            id: RepRangeLabel
                            text: "Repetition Range"
                            halign: "center"
                        MDSlider: #Range
                            id: RepRange
                            #thumb_color_active:
                            color: 1, 0.6, 0.05, 1
                            hint: False
                            min: 1
                            max: 20
                            value: 15
                            on_touch_move: 
                                root.SetRepRange()
                            on_touch_up:
                                root.SetRepRange()
                        MDLabel:
                            id: IncrementLabel
                            text: "Weight Increment"
                            halign: "center"
                        MDSlider: #minimum
                            id: Increment
                            color: 1, 0.6, 0.05, 1
                            hint: False
                            min: 1.0
                            step: 0.5
                            max: 20.0
                            value: 5.0
                            on_touch_move: 
                                root.SetInc()
                            on_touch_up:
                                root.SetInc()
                    MDAnchorLayout:
                        anchor_x: "center"
                        anchor_y: "center"
                        size_hint: 1, 0.3
                        MDIconButton:
                            icon: "check-all"
                            on_release: 
                                root.Confirm()

                MDCard:
                    id: header
                    style: "outlined"
                    size_hint: 1, None
                    size: 0, "55dp"
                    pos_hint: {'x':-0.15, 'y':0.88}
                    #border_radius: 80
                    radius: [60]
                    md_bg_color: 1,1,1,1
                    line_color: 0.01,0.5,0.99,0.4
                    MDRelativeLayout:
                        size_hint: 1,1 
                        
                        TextInput:
                            hint_text: "GiveMeName"
                            text: ""
                            size_hint: 1, 2
                            pos_hint: {"x":0.2, 'center_y':-0.1}
                            id: ExerciseName
                            font_size: "30dp"
                            bold: True
                            halign: "left"
                            color: 0,0,0,1
                            background_color: 1,0,0,0
                            multiline: False
                        MDIconButton:
                            pos_hint: {'right':1, 'center_y':0.5}
                            icon: "arrow-left"
                            line_color: 0.01,0.5,0.99,0.4
                            line_width: 1
                            size: "55dp", "55dp"
                            md_bg_color: 0.01,0.5,0.99,0
                            on_release: 
                                app.root.transition = SlideTransition(direction="right")
                                app.root.current = "UI_landing"

        MDRelativeLayout:
            id: Page2
            md_bg_color: 1,1,1,1
            
            MDIconButton:
                id: PageIcon
                pos_hint: {"x" : -0.005, "y" : 0.05}
                icon: ""
                on_release: root.PageSwitch()
                md_bg_color: 0,0,0,0
            MDBoxLayout:
                size_hint: 1,0.9
                orientation: "horizontal"
                MDLabel:
                    text: ""
                    size_hint: 0.3,1
                MDRelativeLayout:
                    size_hint: 0.9,1
                    anchor_x: 'left'
                    anchor_y: 'top'
                    Image: 
                        fit_mode: "fill"
                        color: 1,1,1,1
                        size_hint_x: -1
                        pos_hint: {'x': 1,'y': 0}
                        source: 'images/Back_bg.png'
                    Image: #Hams
                        id: HamsB
                        fit_mode: "fill"
                        size_hint_x: -1
                        pos_hint: {'x': 1,'y': 0}
                        color: 1,1,1,1
                        source: 'images/Back_hamstrings.png'
                    Image: #Glutes
                        id: GlutesB
                        fit_mode: "fill"
                        size_hint_x: -1
                        pos_hint: {'x': 1,'y': 0}
                        color: 1,1,1,1
                        source: 'images/Back_glutes.png'
                    Image: #Triceps
                        id: TricepsB
                        fit_mode: "fill"
                        size_hint_x: -1
                        pos_hint: {'x': 1,'y': 0}
                        color: 1,1,1,1
                        source: 'images/Back_triceps.png'
                    Image: #lats
                        id: LatsB
                        fit_mode: "fill"
                        size_hint_x: -1
                        pos_hint: {'x': 1,'y': 0}
                        color: 1,1,1,1
                        source: 'images/Back_lats.png'
                    Image: #Delts
                        id: DeltsB
                        fit_mode: "fill"
                        size_hint_x: -1
                        pos_hint: {'x': 1,'y': 0}
                        color: 1,1,1,1
                        source: 'images/Back_delts.png'
                    Image: #calves
                        id: CalvesB
                        fit_mode: "fill"
                        size_hint_x: -1
                        pos_hint: {'x': 1,'y': 0}
                        color: 1,1,1,1
                        source: 'images/Back_calves.png'
                    Image: #Traps
                        id: TrapsB
                        fit_mode: "fill"
                        size_hint_x: -1
                        pos_hint: {'x': 1,'y': 0}
                        color: 1,1,1,1
                        source: 'images/Back_trapz.png'
                    Button: #Delts
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.23 , 0.075 
                        pos_hint: {'x': 0.52,'y': 0.73}
                        on_release: root.MusclePart("Delts")
                    Button: #Triceps
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.23 , 0.09
                        pos_hint: {'x': 0.53,'y': 0.63}
                        on_release: root.MusclePart("Triceps")
                    Button: #Hams
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.3 , 0.12
                        pos_hint: {'x': 0.23,'y': 0.33}
                        on_release: root.MusclePart("Hams")
                    Button: #Calves
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.3 , 0.12
                        pos_hint: {'x': 0.29,'y': 0.15}
                        on_release: root.MusclePart("Calves")
                    Button: #Glutes
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.25 , 0.08
                        pos_hint: {'x': 0.18,'y': 0.47}
                        on_release: root.MusclePart("Glutes")
                    Button: #Lats
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.20 , 0.12
                        pos_hint: {'x': 0.29,'y': 0.65}
                        on_release: root.MusclePart("Lats")
                    Button: #Lats2
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.20 , 0.08
                        pos_hint: {'x': 0.20,'y': 0.60}
                        on_release: root.MusclePart("Lats")
                    Button: #Traps
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.20 , 0.19
                        pos_hint: {'x': 0.13,'y': 0.70}
                        on_release: root.MusclePart("Traps")
                    Button: #Traps2
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.23 , 0.06
                        pos_hint: {'x': 0.23,'y': 0.78}
                        on_release: root.MusclePart("Traps")
                
                MDRelativeLayout:
                    size_hint: 0.9,1
                    Image:
                        fit_mode: "fill"
                        color: 1,1,1,1
                        source: 'images/Front_bg.png'
                    Image: #pecs
                        id: PecsF
                        fit_mode: "fill"
                        color: 1,1,1,0
                        source: 'images/Front_pecs.png' 
                        #on_press: root.Pecs()
                    Image: #biceps
                        id: BicepsF
                        fit_mode: "fill"
                        color: 1,1,1,1
                        source: 'images/Front_biceps.png'
                        #on_press: root.Biceps()
                    Image: #abs
                        id: AbsF
                        fit_mode: "fill"
                        color: 1,1,1,1
                        source: 'images/Front_abs.png'
                        #on_press: root.Abs()
                    Image: #delts
                        id: DeltsF
                        fit_mode: "fill"
                        color: 1,1,1,1
                        source: 'images/Front_delts.png'
                        #on_press: root.Detls()
                    Image: #quads
                        id: QuadsF
                        fit_mode: "fill"
                        color: 1,1,1,1
                        source: 'images/Front_quads.png'
                        #on_press: root.Quads()  
                    Image: #forearms        
                        id: ForearmsF
                        fit_mode: "fill"
                        color: 1,1,1,1
                        source: 'images/Front_forearms.png'
                        #on_press: root.Forearms()    
                    Image: #calves       
                        id: CalvesF
                        fit_mode: "fill"
                        color: 1,1,1,1
                        source: 'images/Front_calves.png'
                        #on_press: root.Calves()
                    Image: #trapz      
                        id: TrapsF
                        fit_mode: "fill"
                        color: 1,1,1,1
                        source: 'images/Front_trapz.png'

                    Button: #abs
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.15 , 0.15 
                        pos_hint: {'x': 0.7,'y': 0.55}
                        on_release: root.MusclePart("Abs")
                    Button: #pecs
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.26 , 0.075 
                        pos_hint: {'x': 0.53,'y': 0.72}
                        on_release: root.MusclePart("Pecs")
                    Button: #Delts
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.24 , 0.075 
                        pos_hint: {'x': 0.28,'y': 0.73}
                        on_release: root.MusclePart("Delts")
                    Button: #biceps
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.23 , 0.075 
                        pos_hint: {'x': 0.22,'y': 0.65}
                        on_release: root.MusclePart("Biceps")
                    Button: #forearms
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.19 , 0.1 
                        pos_hint: {'x': 0.18,'y': 0.55}
                        on_release: root.MusclePart("Forearms")
                    Button: #quads
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.25 , 0.25 
                        pos_hint: {'x': 0.5,'y': 0.3}
                        on_release: root.MusclePart("Quads")
                    Button: #calves
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.25 , 0.15 
                        pos_hint: {'x': 0.42,'y': 0.15}
                        on_release: root.MusclePart("Calves")
                    Button: #traps
                        background_color: 0,0,0,root.ButtonAlpha
                        size_hint: 0.26 , 0.075 
                        pos_hint: {'x': 0.53,'y': 0.80}
                        on_release: root.MusclePart("Traps")


                MDLabel:
                    text: ""
                    size_hint: 0.3,1
    
