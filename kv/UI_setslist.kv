#:import SlideTransition kivy.uix.screenmanager.SlideTransition
##:import RiseInTransition kivy.uix.screenmanager.RiseInTransition

<SetDay>
    size_hint: 0.98, None
    MDRelativeLayout:
        size_hint: 1, 1
        MDBoxLayout:
            size_hint_x: 1
            pos_hint: {'x':0, 'y':0}
            md_bg_color: 0, 0, 0, 0.5
        MDBoxLayout:
            size_hint_x: 1
            pos_hint: {'x':0, 'y':0.02}
            md_bg_color: 0.98, 0.98, 0.98, 1           
        MDLabel:
            pos_hint: {'x':.1, 'y':-0.03}
            id: SetDay
            text: "Datum"
            bold: True
            font_size: "20dp"
            color: 0,0,0,0.4




<SetEntry>
    size_hint: 0.98, None
    MDCard:
        style: "filled"
        size: 1, 100
        size_hint: 1, None
        border_radius: 15
        radius: [15]
        md_bg_color: 0.98, 0.98, 0.98, 1
        MDRelativeLayout:
            size_hint: 1, 1
            MDIcon:
                id: SetTypIcon
                icon: "weight-lifter"
                pos_hint: {'x':.05, 'y':0.2}
            MDIconButton:
                pos_hint: {'x':.88, 'y':0}
                icon: "dots-vertical"
                id: OptionsButton
                md_bg_color: 0, 0, 0, 0
                shadow_color: 0,0,0,0
            BoxLayout:
                pos_hint: {'x':0, 'y':0.2}
                size_hint: 1, 0.4
                orientation: "horizontal"
                MDLabel:
                    text: ""
                    size_hint: 0.15, 1
                MDIcon:
                    icon: "weight"
                    size_hint: 0.2, 1
                    color: 0.01,0.5,0.99,1
                MDLabel:
                    size_hint: 0.15, 1
                    valign: "center"
                    halign: "left"
                    id: Weight
                    text: "80"
                    color: 0.01,0.5,0.99,1
                MDIcon:
                    halign: "center"
                    icon: "repeat"
                    color: 1, 0.6, 0.05, 1
                    size_hint: 0.2, 1
                MDLabel:
                    size_hint: 0.15, 1
                    halign: "left"
                    id: Reps
                    text: "10"
                    color: 1, 0.6, 0.05, 1
                MDLabel:
                    size_hint: 0.25, 1
                    halign: "left"
                    id: Time
                    text: "19:20:22"
                    color: 0.7,0.7,0.7,1


        

<UI_setslist>:
    name: "UI_setslist"
    view: view
    on_enter:
        app.root.transition = SlideTransition(direction="left")
    MDRelativeLayout:
        MDScrollView:
            id: view
        MDCard:
            id: header
            style: "outlined"
            size_hint: 1, None
            size: 0, "55dp"
            pos_hint: {'x':-0.15, 'y':0.88}
            #border_radius: 80
            radius: [60]
            md_bg_color: 1,1,1,1
            line_color: 0.01,0.5,0.99,0.4
            MDRelativeLayout:
                size_hint: 1,1 
                MDLabel: #Title
                    text: "Benchpress"
                    size_hint: 1, 1
                    pos_hint: {'x': 0.21, 'y':0}
                    id: ExerciseNameShadow
                    font_size: "30dp"
                    bold: True
                    halign: "left"
                    color: 0,0,0,0.2
                    md_bg_color: 0,0,0,0
                MDLabel: #Title
                    text: "Benchpress"
                    size_hint: 1, 1
                    pos_hint: {'x':0.21, 'y':0.01}
                    id: ExerciseName
                    font_size: "30dp"
                    bold: True
                    halign: "left"
                    color: 0,0,0,1
                    md_bg_color: 0,0,0,0

                MDIconButton:
                    pos_hint: {'right':1, 'center_y':0.5}
                    icon: "arrow-left"
                    line_color: 0.01,0.5,0.99,0.4
                    line_width: 1
                    size: "55dp", "55dp"
                    md_bg_color: 0.01,0.5,0.99,0
                    on_release: 
                        app.root.transition = SlideTransition(direction="right")
                        app.root.current = "UI_exercise"
